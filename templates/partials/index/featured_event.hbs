<div class="col-md-12">
	<div class="pv-30 ph-20 recent-event-box feature-box text-center" id="box-{{@index}}">
		<div class="va-container">
			<div class="va-align" style="margin: 0 auto;">
				<div class="summary">
					<h2>{{event.title}}</h2>
					{{!-- {{jsonPrint this}} --}}
				</div>
				<a href="/events/{{event.event_key}}"><img src="{{{cloudinaryUrl event.image width=300 height=300 crop='scale' quality=100}}}" alt="{{event.name}}" class="photo" style="margin:0 auto;">{{!-- <span><i class="fa fa-chevron-right" aria-hidden="true"></i></span> --}}</a>
				{{!-- {{#if event.footer}} --}}
					<p>{{{event.footer}}}</p>
				{{!-- {{/if}} --}}
			</div>
		</div>
	</div>
</div>