<div class="event-item">
	<div id="box-{{@index}}">
		<div class="va-container">
			<div class="va-align recent-event">
				<div class="col-md-2">
				<img src="{{{cloudinaryUrl event.image width=150 height=150 crop='scale'}}}" alt="{{event.name}}" class="photo">
				</div>
				<div class="col-md-8 content">
				<h1>
					{{event.name}}
				</h1>
				<h2>{{date event.date format='MMMM Do YYYY'}}</h2>
				
				{{{event.theFooter.html}}}
				<a href="/events/{{event.event_key}}"><span>Read More</span></a>
				</div>
			</div>
		</div>
	</div>
</div>