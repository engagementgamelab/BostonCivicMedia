<div id="get-involved" class="banner row border-clear">
<section><h1 class="title page-title"><strong>Get Involved</strong></h1></section>
<section class="sub-header col-sm-12 col-md-6 col-centered">
	{{getting_involved.subHeader}}
</section>
<section class="involved-wrapper col-md-10 col-centered">
	
	<div class="involved educators col-sm-11 col-md-5">
		<h1 class="title sub-header">Educators</h1>
		<ul>
			{{#each getting_involved.edBlurb}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
	<div class="involved organizations col-sm-11 col-md-5">
		<h1 class="title sub-header">Organizations</h1>
		<ul>
			{{#each getting_involved.orgBlurb}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
	<div class="involved researchers col-sm-11 col-md-5">
		<h1 class="title sub-header">Researchers</h1>
		<ul>
			{{#each getting_involved.resBlurb}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
	<div class="involved students col-sm-11 col-md-5">
		<h1 class="title sub-header">Students</h1>
		<ul>
			{{#each getting_involved.studBlurb}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
</section>
{{!-- LISTSERV --}}
<div class="col-sm-12 clearfix listserv">
<section><h1 class="title page-title light"><strong>Join the Boston Civic Media Listserv</strong></h1></section>
<section class="sub-header dark col-sm-12 col-md-8 col-centered">
	{{getting_involved.listservBlurb}}
	<div class="listserv row">
		<div class="guidelines col-centered">
			{{#each guidelines}}
			<div class="QA">{{>about/guideline guideline=this}}</div>
			{{/each}}
		</div>
		
		<div class="involved buttons">
			<a href="{{getting_involved.listservLink}}" class="btn subscribe-button">Click here to sign up</a>
		</div>
	</div>
</section>
</div>
</div>