				{{/each}}
			</div>
		</div>

		<div class="listserv row">
			<div class="involved pv-40 ph-40">
				<h2 class="title title-white">Listserv Guidelines</h2>
				<p>{{getting_involved.listservBlurb}}<br><a class="brown-item" href="{{{listservLink}}}">{{getting_involved.listservLink}}</a></p>
				<div class="guidelines">
				{{#each guidelines}}
					<div class="QA">{{>about/guideline guideline=this}}</div>
				{{/each}}
				</div>
			</div>
		</div>
		
