{{!< default}}
<!--====================BEGIN HOME==============-->
<div class="container-fluid">
	<div class="row">
		<!-- main start -->
		<!-- ================ -->
		<div class="main">
		{{!-- {{jsonPrint this}} --}}
			<div class="col-md-12 main-blurb" style="background-image: url({{{background.url}}}); background-size: cover; background-repeat: no-repeat;">
				<div class="main-text pv-20">
					<span class="main-mission-statement">{{missionStatements.[0]}}</span>
					<span class="main-description">{{missionStatements.[1]}}</span>
				</div>
			</div>
		</div>
	</div>

		<div class="row beckyBanner">
			<div class="col-md-4">
			{{!-- {{jsonPrint this}} --}}
				<a href="{{{bannerURL}}}"><img class="becky-banner" src="{{{cloudinaryUrl beckyBanner width=700 height=345 crop='scale' quality=100}}}" alt="{{this_event.name}}" class="photo" style="margin:0 auto; min-width: 100%; max-width: 100%; min-height: auto; max-height: 175px;"></a>
			</div>

			<div class="col-md-8">
				<h3>{{bannerHeader}}</h3>
				<p>{{bannerBlurb}}</p>
			</div>
		</div>

		<div class="row main-featured">
			{{#if featured_syllabi}}
				<section class="col-md-6 featured-syllabi">
					<h1>Featured Syllabi:</h1>
					<div>
					    <div>
					        <ul class="featured-list">
					        	{{!-- {{jsonPrint this}} --}}
								{{#each featured_syllabi}}
									<li>{{> index/featured_syllabi featured_syllabi=this}}</li>
								{{/each}}
					        </ul>
					    </div>
						<div class="more-button"><a href="/syllabi">See More Syllabi</a></div>

					</div>
					

				</section>
			{{/if}}	

			{{#if featured_lightning_talks}}
				<section class="col-md-6 featured-lightning-talks">
						<h1>Featured Lightning Talks:</h1>
						<h3>Listen to local civic media leaders share lessons and provocations from the field</h3>
					<ul id="featured_glider" class="bxslider">
						{{#each featured_lightning_talks}}
							<li>{{> index/featured_lightning_talk featured_lightning_talk=this}}</li>
						{{/each}}

			        </ul>
			        
			        <div class="slider-buttons">
			        	<div class="pager">
			        	<a href="">
			        	</div>
			        	<div id="slider-next"></div>
			        	<div id="slider-prev"></div>
		        	</div>
			        
		        	<div class="more-button">
			        	<a href="/lightning_talk">Watch More Lightning Talks</a>
		        	</div>					
				</section>
			{{/if}}
		</div>
