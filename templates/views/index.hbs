{{!< default}}
<div>
	<div class="row top-content">
		
		<section class="col-md-12 main-blurb">
			<div class="col-sm-10 col-centered">
				<h1>Boston Civic Media</h1>
				<h2>a network for solving problems at the scale of the city</h2>
				<div class="features desktop">
					{{#each features}}
					{{> index/feature}}
					{{/each}}
				</div>
			</div>
		</section>
		
		<div class="features mobile">
			{{#each features}}
			{{> index/feature}}
			{{/each}}
		</div>
	</div>
</div>
<div class="row main-featured">
	<section class="col-md-6 upcoming-events">
		<h1>Upcoming Events</h1>
		<ul>
			{{#each events}}
			<li>{{> index/event event=this}}</li>
			{{/each}}
			
		</ul>
		
		{{!-- <div class="more-button">
			<a href="/lightning_talk">Watch All Lightning Talks</a>
		</div> --}}
	</section>
	{{#if featured_syllabi}}
	<section class="col-md-6 featured-syllabi">
		<h1>Featured Syllabi:</h1>
		
		<div>
			<div>
				<ul class="featured-list">
					{{#each featured_syllabi}}
					<li>{{> index/featured_syllabi featured_syllabi=this}}</li>
					{{/each}}
				</ul>
			</div>
			<div class="more-button"><a href="/syllabi">See All Syllabi</a></div>
		</div>
	</section>
	{{/if}}
</div>
</div>