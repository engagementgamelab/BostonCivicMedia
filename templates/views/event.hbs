<section class="main-container padding-bottom-clear">
	<div class="ph-40">
		<div class="main">
		<h2 class="page-title" style="margin-left:2%;">{{{this_event.theTitle.html}}}</h2>
			{{!-- <h1 class="page-title"><strong>Single Event</strong></h1> --}}
			{{!-- {{> page/lead}} --}}
		</div>
	</div>

	{{!-- We'll need some filtering dropdowns here --}}

	{{!-- Show all syllabi below by default --}}
	<div class="ph-40 pv-20 this-event">
		<div class="row">
		{{!-- {{jsonPrint this_event}} --}}
			<div class="col-md-8 col-sm-6 ph-40 event-description">
				
				<p>{{{this_event.theDescription.html}}}</p>
				<ul>
					<li><a href="{{this_event.eventbriteURL}}">Eventbrite Link</a></li>
					<li><a href="{{this_event.hackpadURL}}">Hackpad Link</a></li>
					<li><a href="{{this_event.additionalURL}}">Read More</a></li>
				</ul>
				
			</div>
			<div class="col-md-4 col-sm-6">
			<img src="{{{cloudinaryUrl this_event.image width=auto height=auto crop='scale' quality=100}}}" alt="{{this_event.name}}" class="event-photo" style="margin:0 auto;">
				
			</div>
		
		</div>
		<div class="row pv-40">
			<div class="col-md-8 col-sm-12">
			{{#if this_event.videoLinks}}
			<div class="video-links">
			<h4>Lightning talks related to this event:</h4>
				<ul>
					{{#each this_event.videoLinks}}
					<li><a href='{{this}}'>{{this}}</a></li>
					{{/each}}
				</ul>
			</div>
			{{/if}}
			</div>

			<div class="col-md-4 col-sm-12">
				{{#if this_event.file}}
					<a href="{{{this_event.file.url}}}" class="event-button" download="{{this_event.file.filename}}">Download PDF <span class="fa fa-download"></span></a>
				{{/if}}
			</div>
		</div>
		
</section>
