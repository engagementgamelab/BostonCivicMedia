<section class="main-container padding-bottom-clear">
	<div class="container">
		<div class="main">
		<h2 class="page-title">{{this_event.title}}</h2>
			{{!-- <h1 class="page-title"><strong>Single Event</strong></h1> --}}
			{{!-- {{> page/lead}} --}}
		</div>
	</div>

	{{!-- We'll need some filtering dropdowns here --}}

	{{!-- Show all syllabi below by default --}}
	<div class="container pv-20 this-event">
		<div class="row">
		{{!-- {{jsonPrint this_event}} --}}
			<div class="col-md-8 ph-40 event-description">
				
				<p>{{{this_event.theDescription.html}}}</p>
				<ul>
					<li><a href="{{this_event.eventbriteURL}}">Eventbrite Link</a></li>
					<li><a href="{{this_event.hackpadURL}}">Hackpad Link</a></li>
					<li><a href="{{this_event.additionalURL}}">Read More</a></li>
				</ul>
				
			</div>
			<div class="col-md-4">
			<img src="{{{cloudinaryUrl this_event.image width=auto height=auto crop='scale' quality=100}}}" alt="{{this_event.name}}" class="photo" style="margin:0 auto;">
				
			</div>
		
		</div>
		<div class="row pv-40">
			<div class="col-md-8">
				
			</div>

			<div class="col-md-4">
				<div class="embed-responsive embed-responsive-16by9">
					{{{this_event.data.html}}}
						  {{!-- {{jsonPrint featured_lightning_talk}} --}}
				</div>
			</div>
		</div>
		
</section>
