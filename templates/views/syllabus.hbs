<section class="main-container padding-bottom-clear syllabus-wrap">
	<div class="main ph-40">
		<h3 class="page-title">{{this_syllabus.title}}</h3>
		<h5>{{this_syllabus.author}}</h5>
	</div>

	<div class="ph-40 pv-40">
		<div class="row">

			<div class="col-md-4 col-sm-4 this-syllabus-info">
			
				{{#if this_syllabus.institution}}
					<p>Institution(s): {{#each this_syllabus.institution}} {{this.name}}{{#unless @last}}, {{/unless}} {{/each}}</p>
				{{/if}}

				{{#if this_syllabus.discipline}}
					<p>Discipline(s): {{#each this_syllabus.discipline}} {{this.name}}{{#unless @last}}, {{/unless}} {{/each}}</p>
				{{/if}}

				{{#if this_syllabus.faculty}}
					<p>Faculty Member(s): {{#each this_syllabus.faculty}} {{this.name}}{{#unless @last}}, {{/unless}} {{/each}}</p>
				{{/if}}

				{{#if this_syllabus.keyword}}
					<p>Keyword(s): {{#each this_syllabus.keyword}}{{this.name}}{{#unless @last}}, {{/unless}} {{/each}}</p>
				{{/if}}

				{{#if this_syllabus.partnerOrg}}
					<p>Partner Organization(s):{{#each this_syllabus.partnerOrg}}{{this.name}}{{#unless @last}}, {{/unless}} {{/each}}</p>
				{{/if}}

				{{#if this_syllabus.file}}
				
					<a href="{{{this_syllabus.file.url}}}" class="syllabus-button" download="{{this_syllabus.file.filename}}">Download PDF <span class="fa fa-download"></span></a>
					
				{{else}}
					
					<p>Look out for the downloadable syllabus coming soon!</p>

				{{/if}}

			</div>
			<div class="this-syllabus-description col-md-8 col-sm-8">
				
				<p>{{this_syllabus.description}}</p>
			</div>
			
		</div>
	</div>
		
</section>
